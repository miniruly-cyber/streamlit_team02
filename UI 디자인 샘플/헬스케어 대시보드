import streamlit as st
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

st.set_page_config(page_title="í—¬ìŠ¤ì¼€ì–´ ëŒ€ì‹œë³´ë“œ", layout="wide")

st.title("ğŸ¥ í—¬ìŠ¤ì¼€ì–´ ëŒ€ì‹œë³´ë“œ")
st.markdown("ê±´ê°• ìƒíƒœë¥¼ ëª¨ë‹ˆí„°ë§í•˜ëŠ” ëŒ€ì‹œë³´ë“œì…ë‹ˆë‹¤.")

# ê°€ìƒ ë°ì´í„° ìƒì„±
dates = pd.date_range("2025-01-01", periods=30)
data = pd.DataFrame({
    "ë‚ ì§œ": dates,
    "ì‹¬ë°•ìˆ˜": np.random.randint(60, 100, size=30),
    "í˜ˆì••(ìˆ˜ì¶•ê¸°)": np.random.randint(110, 150, size=30),
    "í˜ˆì••(ì´ì™„ê¸°)": np.random.randint(70, 95, size=30),
    "í˜ˆë‹¹": np.random.randint(80, 150, size=30)
})

# ìµœì‹  ìƒíƒœ í‘œì‹œ
st.subheader("ğŸ“Š ìµœì‹  ê±´ê°• ìƒíƒœ")
latest = data.iloc[-1]
st.metric("ì‹¬ë°•ìˆ˜", f"{latest['ì‹¬ë°•ìˆ˜']} bpm")
st.metric("í˜ˆì••", f"{latest['í˜ˆì••(ìˆ˜ì¶•ê¸°)']}/{latest['í˜ˆì••(ì´ì™„ê¸°)']} mmHg")
st.metric("í˜ˆë‹¹", f"{latest['í˜ˆë‹¹']} mg/dL")

# ê·¸ë˜í”„
st.subheader("ğŸ“ˆ ê±´ê°• ë°ì´í„° ì¶”ì„¸")
fig, ax = plt.subplots(figsize=(10,5))
ax.plot(data["ë‚ ì§œ"], data["ì‹¬ë°•ìˆ˜"], label="ì‹¬ë°•ìˆ˜")
ax.plot(data["ë‚ ì§œ"], data["í˜ˆì••(ìˆ˜ì¶•ê¸°)"], label="í˜ˆì••(ìˆ˜ì¶•ê¸°)")
ax.plot(data["ë‚ ì§œ"], data["í˜ˆì••(ì´ì™„ê¸°)"], label="í˜ˆì••(ì´ì™„ê¸°)")
ax.plot(data["ë‚ ì§œ"], data["í˜ˆë‹¹"], label="í˜ˆë‹¹")
ax.legend()
st.pyplot(fig)

# ë°ì´í„° í…Œì´ë¸”
st.subheader("ğŸ“‹ ì›ì‹œ ë°ì´í„°")
